{
  "lerna": "4.0.0",
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "version": {
      "exact": true,
      "allowBranch": ["master", "release/next"]
    },
    "publish": {
      "ignoreChanges": [
        "{.*,*}.{txt,md,yml}",
        "{.*,*}{.config,rc,ignore}{,.js}",
        "LICENSE",
        "lerna.json"
      ],
      "message": "chore(release): :robot: publish",
      "conventionalCommits": true
    }
  },
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "packages": [
    "packages/cli",
    "packages/components/*",
    "packages/configs",
    "packages/pos",
    "packages/styles",
    "packages/utils",
    "packages/webpack",
    "packages/logger"
  ],
  "changelogPreset": {
    "name": "conventionalcommits"
  },
  "ignoreChanges": ["**/node_modules/**", "**/*.md", "**/test/**", ".npmrc"]
}
