{
  "lerna": "4.0.0",
  "version": "10.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "{.*,*}.{txt,md,yml}",
        "{.*,*}{.config,rc,ignore}{,.js}",
        "LICENSE",
        "lerna.json"
      ],
      "message": "chore(release): :robot: publish",
      "conventionalCommits": true
    }
  },
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "packages": [
    "packages/cli",
    "packages/components/*",
    "packages/configs",
    "packages/pos",
    "packages/styles",
    "packages/utils",
    "packages/webpack",
    "packages/logger",
    "packages/org"
  ],
  "changelogPreset": {
    "name": "conventionalcommits",
    "issuePrefixes": [
      "#"
    ],
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "feature",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "revert",
        "section": "Reverts"
      },
      {
        "type": "docs",
        "section": "Documentation",
        "hidden": true
      },
      {
        "type": "style",
        "section": "Styles",
        "hidden": true
      },
      {
        "type": "chore",
        "section": "Miscellaneous Chores",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Code Refactoring",
        "hidden": true
      },
      {
        "type": "test",
        "section": "Tests",
        "hidden": true
      },
      {
        "type": "build",
        "section": "Build System",
        "hidden": true
      },
      {
        "type": "ci",
        "section": "Continuous Integration",
        "hidden": true
      }
    ],
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
    "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
    "userUrlFormat": "{{host}}/{{user}}"
  },
  "ignoreChanges": [
    "**/node_modules/**",
    "**/*.md",
    "**/test/**",
    ".npmrc"
  ]
}
