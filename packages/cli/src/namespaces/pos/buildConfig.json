{
  "platforms": {
      "pax" : {
          "platform" : "PAX_S920",
          "mkspecs" : "sdk/linux/PAX/S920/Qt/mkspecs/qws/linux-arm-gnueabi-g++",
          "toolchain" : "sdk/linux/PAX/S920/toolchain/arm-2014.05/bin",
          "sysroot" : "sdk/linux/PAX/S920/sysroot",
          "qt_dir" : "sdk/linux/PAX/S920/Qt"
      },
      "perto" : {
          "platform" : "PERTO_VELOH",
          "mkspecs" : "qws/linux-arm-gnueabi-g++",
          "toolchain" : "sdk/linux/perto/veloh/toolchain/bin",
          "sysroot" : "sdk/linux/perto/veloh/arm-buildroot-linux-gnueabihf/sysroot/",
          "qt_dir" : "sdk/linux/perto/veloh/host"
      }
  },
  "packages" : [
      {
          "name": "Qt",
          "type": "libraries",
          "version": "4.8.7.0",
          "fileList": [
              "plugins",
              "imports",
              "lib/fonts",
              "lib/libQt*"
          ]
      },
      {
          "name": "Style",
          "type": "assets",
          "version": "1.0.0",
          "fileList": [
              "style.css",
              "style.json",
              "res"
          ]
      },
      {
          "name": "Mamba",
          "type": "kernel",
          "version": "2.3.0",
          "fileList": [
              "lib/libMAMBA_*",
              "lib/libStone*",
              "lib/libStatusBar.so",
              "lib/libD_EMV_LIB_v602_01.so",
              "StoneMambaSystem",
              "StoneMambaLoader",
              "StoneMambaUpdater",
              "sci",
              "sys"
          ]
      },
      {
          "name": "3rdparty",
          "type": "libraries",
          "version": "1.0.0",
          "fileList": [
              "lib/libcrypto.so",
              "lib/libssl.so",
              "lib/libqj*",
              "lib/libsqlite3*",
              "lib/libstdc++*"
          ]
      },
      {
          "name": "BasicApplications",
          "type": "apps",
          "version": "2.0.0",
          "fileList": [
              "apps"
          ]
      }
  ],
  "apps":[
    {
      "dist": "/launcherApp/ui/dist/",
      "manifest": "/launcherApp/manifest.xml",
      "dest": "0-launcher.stone"
    },
    {
      "dist": "/pos-mamba-app-payment/dist/bundle.pos/",
      "dest": "1-payment.stone"
    },
    {
      "dist": "/cancellation/ui/dist/",
      "icon": "/cancellation/icon.bmp",
      "manifest": "/cancellation/manifest.xml",
      "dest": "2-cancellation.stone"
    },
    {
      "dist": "/mambaStore/ui/dist/",
      "icon": "/mambaStore/icon.bmp",
      "lib": "/mambaStore/build/PAX_S920/libMambaStore.so",
      "manifest": "/mambaStore/manifest.xml",
      "dest": "3-store.stone"
    },
    {
      "dist": "/configApp/ui/dist/",
      "icon": "/configApp/icon.bmp",
      "manifest": "/configApp/manifest.xml",
      "dest": "4-config.stone"
    },
    {
      "dist": "/reportApp/ui/dist/",
      "icon": "/reportApp/icon.bmp",
      "manifest": "/reportApp/manifest.xml",
      "dest": "5-report.stone"
    },
    {
      "dist": "/activationApp/ui/dist/",
      "manifest": "/activationApp/manifest.xml",
      "dest": "6-activation.stone"
    },
    {
      "dist": "/calculatorApp/ui/dist/",
      "icon": "/calculatorApp/icon.bmp",
      "manifest": "/calculatorApp/manifest.xml",
      "dest": "7-calculator.stone"
    },
    {
      "dist": "/reprintApp/ui/dist/",
      "icon": "/reprintApp/icon.bmp",
      "manifest": "/reprintApp/manifest.xml",
      "dest": "9-reprint.stone"
    },
    {
      "dist": "/helpApp/ui/dist/",
      "icon": "/helpApp/icon.bmp",
      "manifest": "/helpApp/manifest.xml",
      "dest": "10-help.stone"
    },
    {
      "dist": "/newsApp/ui/dist/",
      "icon": "/newsApp/icon.bmp",
      "manifest": "/newsApp/manifest.xml",
      "dest": "12-news.stone"
    },
    {
      "dist": "/ravApp/ui/dist/",
      "icon": "/ravApp/icon.bmp",
      "manifest": "/ravApp/manifest.xml",
      "dest": "13-rav.stone"
    },
    {
      "icon": "/closureApp/icon.bmp",
      "dist": "/closureApp/ui/dist/",
      "manifest": "/closureApp/manifest.xml",
      "dest": "14-closure.stone"
    }
  ]
}
