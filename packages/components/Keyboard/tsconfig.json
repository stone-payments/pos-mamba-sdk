{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "lib",
    "lib": [
      "esnext",
      "DOM"
    ],
    "target": "ES5",
    "module": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declarationDir": "types",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": false,
    "sourceRoot": "",
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "removeComments": false,
    "typeRoots": [
      "../../../node_modules/@types",
      "src/customTypes"
    ]
  },
  "include": [
    "src"
  ]
}