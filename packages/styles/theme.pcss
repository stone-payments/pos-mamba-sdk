@import 'colors.pcss';

/** Colors */
$default-text-color: $grey-darker;

/** Fonts */
$default-font-family: 'Roboto', Arial, sans-serif;
$default-font-size: 14px;

/** Spacing */
$row-padding: 12px 15px;
$row-border-color: $grey-lighter;

/** Layers */
$layer-dialog: 1000;
$layer-dialog-fullscreen: 1002;
$layer-appbar: 1001;

/** UI */
$appbar-height: 38px;
