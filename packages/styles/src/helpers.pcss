.h-fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.h-fixed-center,
.h-absolute-center {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.h-fixed-center {
  position: fixed;
}

.h-absolute-center {
  position: absolute;
}

.h-color-gray-darker {
  color: $gray-darker;
}

.h-color-gray {
  color: $gray;
}

.h-color-gray-lighter {
  color: $gray-lighter;
}

.h-color-gray-lightest {
  color: $gray-lightest;
}
