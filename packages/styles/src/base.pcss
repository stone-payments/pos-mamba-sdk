*,
*::after,
*::before {
  box-sizing: border-box;
}

*:focus {
  outline: none !important;
}

body {
  background-color: #fff;
  color: $default-text-color;
  font-family: $mamba-font-family;
  font-size: $mamba-font-size-default;
  font-style: normal;
  font-weight: normal;
  line-height: 1.4;
}

small {
  font-size: 12px;
}

a {
  text-decoration: none;
}
