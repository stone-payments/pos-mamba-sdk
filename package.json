{
  "name": "mamba-web",
  "version": "1.0.0",
  "description": "Web related Mamba libraries",
  "author": "Stone Payments - Mamba Team",
  "license": "Apache-2.0",
  "repository": "https://github.com/stone-payments/pos-mamba-web.git",
  "scripts": {
    "start": "bolt w @mamba/docssapper start",
    "build": "bolt ws build",
    "build:style": "bolt w @mamba/style build",
    "build:libs": "bolt ws build --only-fs \"packages/{utils,native}/**\"",
    "delete:modules": "rm -rf \"node_modules\" \"./**/node_modules\"",
    "link:packages": "bolt ws exec --only-fs \"packages/**\" -- yarn link",
    "lint": "yarn lint:css; yarn lint:js",
    "lint:js": "eslint \"*.js\" \"{tools,packages,website}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint --custom-syntax \"postcss-html\" \"packages/**/*.{html,svelte,css,pcss}\"",
    "format": "yarn format:css; yarn format:js",
    "format:js": "prettier --write \"*.js\" \"{tools,packages,website}/**/*.js\" && eslint --fix \"*.js\" \"{tools,packages,website}/**/*.{js,html,svelte}\"",
    "format:css": "prettier --write \"packages/**/*.{css,pcss}\" && stylelint --fix --custom-syntax \"postcss-html\" \"packages/**/*.{html,svelte,css,pcss}\"",
    "test": "bolt ws test"
  },
  "bolt": {
    "workspaces": [
      "packages/cli",
      "packages/utils",
      "packages/native",
      "packages/store",
      "packages/styles",
      "packages/configs",
      "packages/components/*",
      "docs-sapper"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,svelte}": [
      "eslint --fix",
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{pcss,css}": [
      "prettier --write",
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.47",
    "@babel/core": "^7.0.0-beta.47",
    "@babel/node": "^7.0.0-beta.47",
