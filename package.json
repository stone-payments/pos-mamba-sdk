{
  "name": "mambasdk",
  "version": "2.0.0-alpha.1",
  "description": "SDK for developing in the Mamba web environment",
  "repository": "https://github.com/stone-payments/pos-mamba-web.git",
  "author": "Stone Payments - Mamba Team",
  "contributors": [
    "Christian Kaisermann <christian.kaisermann@stone.com.br>",
    "Pedro Lancelloti <pedro.lancelloti@stone.com.br>",
    "Jaime Costa Marques <cmarques@stone.com.br>",
    "Jackson Garcia <jackson.garcia@stone.com.br>"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 8.10.0",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.7.0"
  },
  "scripts": {
    "build": "bolt ws build",
    "delete:modules": "rm -rf \"node_modules\" \"./**/node_modules\"",
    "link:packages": "bolt ws exec --only-fs \"packages/**\" -- yarn link",
    "lint": "yarn lint:css; yarn lint:js",
    "lint:js": "eslint \"*.js\" \"{tools,packages}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint --custom-syntax \"postcss-html\" \"packages/**/*.{html,svelte,css,pcss}\"",
    "format": "yarn format:css; yarn format:js",
    "format:js": "prettier --write \"*.js\" \"{tools,packages}/**/*.js\" && eslint --fix \"*.js\" \"{tools,packages}/**/*.{js,html,svelte}\"",
    "format:css": "prettier --write \"packages/**/*.{css,pcss}\" && stylelint --fix --custom-syntax \"postcss-html\" \"packages/**/*.{html,svelte,css,pcss}\"",
    "test": "bolt ws test"
  },
  "bolt": {
    "workspaces": [
      "packages/cli",
      "packages/utils",
      "packages/signal",
      "packages/api",
      "packages/pos",
      "packages/bridges",
      "packages/store",
      "packages/styles",
      "packages/configs",
      "packages/webpack",
      "packages/components/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{html,svelte}": [
        "eslint --fix",
        "stylelint --fix --custom-syntax \"postcss-html\"",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.{pcss,css}": [
        "prettier --write",
        "stylelint --fix --custom-syntax \"postcss-html\"",
        "git add"
      ]
    }
  },
  "devDependencies": {
